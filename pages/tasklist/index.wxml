<wxs module="active">
check = function(a,b) {
    for (var i = 0; i < a.length; i++) {
             if (a[i] === b){return true;}
    }
    return false;}
formatNumber = function (n) {
        n = n.toString()
        return n[1] ? n : '0' + n}
      parseTime = function (time, type) {
        if (time == null || type == '') {
          return ''}
        if (arguments.length === 0) {
          return null}
        var date = getDate(time);//在wxs中不能使用new Date()来处理日期
        var y = date.getFullYear();
        var m = formatNumber(date.getMonth() + 1);
        var d = formatNumber(date.getDate());
        var h = formatNumber(date.getHours());
        var i = formatNumber(date.getMinutes());
        var s = formatNumber(date.getSeconds());
        var a = formatNumber(date.getDay());
        var time_str = "";
        if (type == 'hourmin'){
           time_str = h + ':' + i
        }
        else if (type == 'month') {
          time_str = y + '-' + m;
        } else if (type == 'date') {
          time_str = y + '-' + m + '-' + d;
        } else if (type == 'datetime') {
          time_str = y + '-' + m + '-' + d + ' ' + h + ':' + i + ':' + s;
        } else if (type == 'onlyMonth') {
          time_str = m;
        } else if (type == 'onlyYear') {
          time_str = y;
        }
        return time_str
      },
module.exports = {
  chk : check,
  psd: parseTime,}
</wxs>
<view style="background-image: url({{im}});height:fit-content;width:100%;">
    <view class="bg-gradual-{{cl}} padding radius text-center shadow-blur">
<view class="title" >tasklist</view>
<view class="date-choose shrink" >
  <view class="data-month">{{dateMonth}}</view>
  <swiper class="date-choose-swiper" indicator-dots="{{false}}" current="{{swiperCurrent}}" bindchange="dateSwiperChange">
    <block wx:for="{{dateList}}" wx:for-item="date" wx:key="date.id">
      <swiper-item class="swiper-item">
        <view class="weekday">
          <block wx:for-item="weekday" wx:for="{{dateListArray}}" wx:key="{{index}}">
            <text class="week">{{weekday}}</text>
          </block>
        </view>
        <view class="dateday">
        <block wx:for="{{date.days}}" wx:for-item="day" wx:key="{{day.id}}">
            <text class="day" id="{{day.id}}" data-id="{{day.id}}" bindtap="chooseDate">
              <text class="{{dateCurrentStr==day.id?'active':''}}">{{day.day}}
              </text>
              <text class="{{active.chk(dateactive,day.id)?'active1':''}}">
              </text>
            </text>
          </block>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>
<!-- 时间组件-->
<button class="hidevisual">任务列表 </button>
<view class="head">{{dateCurrentStr}} 待完成任务 {{tasklist.length}} 项</view>
<scroll-view scroll-y="true" style="height:150px;opacity:0.7;background-color:green">
<block wx:if="{{true}}"wx:for="{{tasklist}}"  >
<movable-area style="width:100%;height:80px;display: flex;flex-direction: row;">
<movable-view direction="horizontal" class="task_normal" bindlongpress="long_press"  data-id="{{item.id}}" out-of-bounds="true"  > 
<image src="/image/tasks.png" class="image_view" ></image>
<view class="task_name_style">任务名: {{item.desc}}</view>  
<view class="task_name_style;">开始时间:{{active.psd(item.start_time,"hourmin")}}</view>
<view class="task_name_style">结束时间:{{active.psd(item.due_time,"hourmin")}}</view>
</movable-view>
</movable-area>
</block>
</scroll-view>
<view style="display:flex;flex-direction:row;background-color: white;color:green">
<icon  type="info" size="44"></icon>
<navigator url="../input/index" style="font-size: 20px;text-shadow: 3px;">新增任务</navigator>
</view>
<button bindtap="hide" class="hidevisual">{{showvis? "隐藏任务视图":"显示任务视图"}}</button>
<view wx:if="{{showvis}}">
<view class="visualize" >待完成任务视图</view>
<scroll-view  scroll-x="true" style="height:300px">
<view style="display:flex;flex-direction:row;">
<view wx:for="{{cnttask}}" wx:for-index="key"  >
   <view style="display:flex;flex-direction: column; height:200px;" wx:if="{{item !== 0}}">
   <view class="task_name_style">{{key}}</view>
   <view  style="display:flex;flex-direction: column;height:{{item*20 >160 ?180:item*20}}px;background-color:rgb(0,{{255 - item*20}},255)" class="table" ></view>
   <view class="task_name_style" >{{item}}</view>
</view>
</view>
</view>
</scroll-view>
</view>
</view>
