

<view style="background-image: url(/image/tasklist_bkg.jpg);height:600px;width:100%;" >
<view class="title" >tasklist</view>
<view class="head">待完成任务 {{tasklist.length}} 项</view>


<block wx:if="{{true}}"wx:for="{{tasklist}}" >
<movable-area style="width:100%;height:80px;display: flex;flex-direction: row;">
<movable-view direction="horizontal" class="task_normal" bindlongpress="long_press" data-id = "{{item.id}}"   > 
<image src="/image/tasks.png" class="image_view" ></image>
<view class="task_name_style">任务名: {{item.name}}</view>
<view class="task_name_style">開始時間:{{item.start_time}}</view>
</movable-view>
</movable-area>
</block>





<view wx:if="{{tasklist.length === 0}}" class="title-1"  style="display:block">
...nothing to do today!😁😁
</view>
</view>